<h1>Listing groups</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% @groups.each do |group| %>
  <tr>
    <td><%=h group.name %></td>
    <td><%= link_to 'Show', group_path(group.key) %></td>
    <td><%= link_to 'Edit', edit_group_path(group.key) %></td>
    <td><%= link_to 'Destroy', group_path(group.key), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New group', new_group_path %>
